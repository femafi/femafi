{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es5", "es2015.promise", "esnext.asynciterable"],
    "typeRoots": ["node_modules/\@types"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./src/types.d.ts"]
}
